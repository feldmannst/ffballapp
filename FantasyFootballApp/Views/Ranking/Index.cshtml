@model FantasyFootballApp.Models.RankingViewModel
@{
    ViewBag.Title = "Rankings";
}
<br />
<div class="row">
    @using (Html.BeginForm("", "", FormMethod.Get, new { @id="rankingupdateform", @class="form-inline"}))
    {
        <div class="form-group">
            @Html.Label("Choose Expert", new { @class = "control-label" })
            @Html.DropDownList("expertid", Model.ExpertList as SelectList, "Choose Expert", new { @id = "expertid", @class="form-control", style="width: 200px" })
        </div>
        <div class="form-group">
            @Html.Label("Choose Position", new { @class = "control-label" })
            @Html.DropDownList("positionid", Model.AllPositions as SelectList, "Choose Position", new { @id = "positionid", @class = "form-control", style = "width: 200px" })
        </div>
        <button class="btn btn-default" id="reload">Reload</button>
    }
</div>

<h2>Rankings by Expert</h2>

<div class="row">
    <div id="rankingssection">
        @Html.Action("DisplayExpertRankings", "Ranking")
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/Scripts/RankingsUpdate.js")
}