@model FantasyFootballApp.Models.EditPlayerViewModel
<link href="~/Scripts/jtable/themes/lightcolor/blue/jtable.css" rel="stylesheet" />
@{
    ViewBag.Title = "Edit Players";
}


<div class="row">
    <h2>Edit Players</h2>
    <form class="form-inline">
        <div class="form-group">
            @Html.Label("Choose Team: ", new { @class = "control-label" })
            @Html.DropDownList("teamdd", Model.AllTeams as SelectList, "Choose Team", new { id = "teamdd", @class = "form-control", style = "width: 200px" })
        </div>
        <div class="form-group">
            @Html.Label("Choose Position: ", new { @class = "control-label" })
            @Html.DropDownList("positiondd", Model.AllPositions as SelectList, "Choose Position", new { id = "positiondd", @class = "form-control", style = "width: 200px" })
        </div>
        <button type="submit" class="btn btn-default" id="LoadRecordsButton">Reload</button>
    </form>
</div>
<div class="row">
    <div id="PlayerTableContainer" class="edit-table"></div>
</div>

@section scripts
{
    @Scripts.Render("~/Scripts/jquery-ui-1.10.4.js")
    @Scripts.Render("~/Scripts/jtable/jquery.jtable.js")
    @Scripts.Render("~/Scripts/PlayerEdit.js")
}