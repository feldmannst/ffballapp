@model FantasyFootballApp.Models.HomeViewModel
@{
    ViewBag.Title = "Home";
}


<div class="row">
    <div class="col-md-6">
        <h2>Top ESPN Players</h2>
        <table class="table table-bordered table-condensed table-hover">
            <tr>
                <th>Rank</th>
                <th>Player</th>
                <th>Position</th>
                <th>Team</th>
            </tr>
            @foreach(var item in Model.TopPlayers)
            {
                <tr class="cell-@item.Player.Position.Abbreviation.ToLower()">
                    <td>@item.Rank</td>
                    <td>@item.Player.PlayerName</td>
                    <td>@item.Player.Position.Abbreviation</td>
                    <td>@item.Player.Team.Abbreviation</td>
                </tr>
            }
        </table>
    </div>
    <div class="col-md-6">
        <h2>Fantasy Football Ranking App</h2>
        <p>Developing an app to allow an easier way to aggregate rankings, create my own rankings and track player choices on draft day</p>
        <p><a class="btn btn-default" href="@Url.Action("Index", "Player")">Edit Players &raquo;</a></p>
    </div>
</div>